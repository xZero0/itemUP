extends layout

block content  
    div(class="container")
        div(class="page-header text-left")
            h1
                span(class="fa fa-anchor") Profile Page

        div(class="row")
            // Local User Information
            div(class="well")
                h3
                    span(class="fa fa-user") Local User

                if user.local.username
                    p
                        strong ID
                        span : #{user._id}
                        br
                        strong Username
                        span : #{user.local.username}
                        br
                        strong Password
                        span : xxx
                        br
                    a(href="#" class="btn btn-default") Unlink
                else
                    a(href="#" class="btn btn-default") Connect Local
